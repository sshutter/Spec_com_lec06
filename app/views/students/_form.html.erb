    <%= form.label :dob, style: "display: block", class:"form-label" %>
    <%= form.date_field :dob, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :student_no, style: "display: block", class:"form-label" %>
    <%= form.text_field :student_no, class:"form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :class_year, style: "display: block", class:"form-label" %>
    <%= form.number_field :class_year, class:"form-control" %>
  </div>
  
  <div class="mb-3">
    <%= form.submit nil, class:"btn btn-dark" %>
  </div>
